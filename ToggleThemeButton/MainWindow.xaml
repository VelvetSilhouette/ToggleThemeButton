<Window x:Class="ToggleThemeButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleThemeButton"
        xmlns:uc="clr-namespace:ToggleThemeButton.Controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Main" Height="450" Width="800">
    <Grid Background="{Binding Background}">
        <uc:JamesNetToggleButton IsChecked="{Binding IsChecked}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
